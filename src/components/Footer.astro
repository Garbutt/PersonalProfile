---
import { Image } from "astro:assets";
---

<footer>
  <div class="container">
    <p>Get In Touch</p>
    <div class="links">
      <i class="fa-brands fa-instagram"></i>
      <i class="fa-brands fa-linkedin"></i>
      <i class="fa-brands fa-github"></i>
    </div>
  </div>
</footer>

<style>
  footer {
    height: 100%;
    width: 100%;
    display: flex;
    padding-bottom: 10%;
    margin-top: 20%;
  }

  p {
    color: #fff;
    font-size: 21px;
    text-align: center;
    margin-bottom: 5%;
  }
  .container {
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: space-between;
  }

  .links {
    width: 100%;
    display: flex;
    justify-content: space-around;
    font-size: 60px;
    align-items: center;
    color: rgb(245, 137, 57);
    color: linear-gradient(
      65deg,
      rgba(245, 137, 57, 1) 0%,
      rgba(226, 155, 51, 1) 48%,
      rgba(255, 212, 0, 1) 100%
    );
  }
</style>
