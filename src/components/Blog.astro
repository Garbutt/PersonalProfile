---
interface Props {
  title: string;
  src: string;
  alt: string;
}

const { title, src, alt } = Astro.props;

import astroLogo from "../../public/astro.png";
---

<body>
  <!---Blog wrapper -->
  <div class="blog-wrapper">
    <!---Blog container -->
    <div class="blog-container">
      <!--Blog Image -->
      <img class="icon" src={src} alt={alt} />
      <!---Blog text -->
      <h4>{title}</h4>
    </div>
  </div>
</body>

<style>
  .blog-wrapper {
    display: flex;
    flex-direction: column;
    margin-left: auto;
    margin-right: auto;
    width: 80%;
    color: #fff;
  }

  .blog-container {
    display: flex;
    width: 100%;
    border: solid 3px #f58939;
    height: 50px;
    align-items: center;
    cursor: pointer;
    transition: 0.5s;
    margin-top: 0%;
    border-radius: 10px;
  }

  h4 {
    text-decoration: underline;
    font-size: 14px;
  }

  .blog-container:hover {
    color: #f58939;
  }

  .icon {
    width: 30px;
    height: 30px;
    margin-left: 2%;
    margin-right: 5%;
    border-radius: 5px;
    border: solid 2px #f58939;
  }

  /*Screens bigger than 500px */
  @media only screen and (min-width: 500px) {
    .blog-wrapper {
      width: 450px;
    }
  }
</style>
