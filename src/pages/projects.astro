---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import webImage from "../../public/webDev.png";
---

<Layout title="My Projects">
  <main>
    <!--My Projects Text -->
    <div class="projects-intro">
      <h1>MY <span class="color-gradient">PROJECTS</span></h1>
    </div>
    <!--Projects Container -->
    <div class="projects-container">
      <div class="flex-container">
        <!--Web Projects -->
        <article>
          <!--Image -->
          <div class="image-container">
            <Image
              alt="Web Development Projects"
              class="image"
              src={webImage}
            />
          </div>
          <!--Heading -->
          <div class="name">
            <h3>WEB PROJECTS</h3>
          </div>
          <!--SubText -->
          <div class="subtext"><p>HTML, CSS, JS</p></div>
        </article>

        <!--JAVA -->
        <article>
          <!--Image -->
          <div class="image-container">
            <Image
              alt="Web Development Projects"
              class="image"
              src={webImage}
            />
          </div>
          <!--Heading -->
          <div class="name">
            <h3>JAVA PROJECTS</h3>
          </div>
          <!--SubText -->
          <div class="subtext"><p>OBJECT ORIENTED PROGRAMMING</p></div>
        </article>

        <!--C Sharp -->
        <article>
          <!--Image -->
          <div class="image-container">
            <Image
              alt="Web Development Projects"
              class="image"
              src={webImage}
            />
          </div>
          <!--Heading -->
          <div class="name">
            <h3>C-SHARP PROJECTS</h3>
          </div>
          <!--SubText -->
          <div class="subtext"><p>.NET</p></div>
        </article>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    height: 100%;
  }

  h1 {
    margin-top: 20%;
    color: #fff;
    font-size: 45px;
  }

  .color-gradient {
    color: rgb(245, 137, 57);
    color: linear-gradient(
      65deg,
      rgba(245, 137, 57, 1) 0%,
      rgba(226, 155, 51, 1) 48%,
      rgba(255, 212, 0, 1) 100%
    );
  }

  .projects-container {
    display: flex;
    width: 100%;
    height: 100%;
    margin-bottom: 10%;
    margin-top: 10%;
  }

  .flex-container {
    display: flex;
    flex-direction: column;
    text-align: center;
    width: 100%;
  }
  article {
    display: flex;
    border: solid 5px #f58939;
    border-radius: 5%;
    height: 250px;
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    flex-direction: column;
    overflow: hidden;
    justify-content: center;
    color: #fff;
    cursor: pointer;
    transition: 0.5s;
    margin-top: 10%;
  }

  article:hover .image {
    width: 240px;
  }

  article:hover {
    opacity: 70%;
  }

  .image {
    width: 200px;
    height: auto;
    border-radius: 5%;
    border: solid 2px #fff;
    transition: 0.5s;
  }

  .name {
    margin-top: 5%;
  }
</style>
