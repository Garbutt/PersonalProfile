---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { Image } from "astro:assets";
import profilePicture from "../../public/profile pic.png";
import htmlLogo from "../../public/html.png";
import cssLogo from "../../public/css-3.png";
import jsLogo from "../../public/js.png";
import java from "../../public/java.png";
import csLogo from "../../public/c-sharp.png";
import Footer from "../components/Footer.astro";
---

<Navbar />
<Layout title="Reece Farrell">
  <main>
    <!---Page header -->
    <div class="page-header">
      <h1 class="text-intro">
        HI, I AM <br /><span class="color-gradient">Reece</span><br
          class="gap"
        />
      </h1>
      <!--Moving Text -->
      <div class="wrapper">
        <p class="sub-text">
          <ul class="dynamic-text">
            <li class="dynamic-list">
              <span> A Junior Software Developer</span>
            </li>
          </ul>
        </p>
      </div>
    </div>
  </main>

  <body>
    <!--Container-->
    <div class="container">
      <!--About Me -->
      <div class="about">
        <h2 class="about-header">&lt;About Me/&gt;</h2>
        <p class="about-text">
          Hello there! ðŸ‘‹ I'm Reece, a junior software developer passionate
          about crafting elegant solutions to real-world problems. <br /><br
          />My journey in the realm of technology began with Web Development,
          and I've been on an exciting learning adventure ever since.
        </p>
        <!--Profile image -->
        <div class="profile-image">
          <Image
            src={profilePicture}
            class="profile"
            alt="Reece Farrell Picture"
          />
        </div>
      </div>
      <!--Languages I use -->
      <h2 class="language-header">&lt;Languages I Use/&gt;</h2>
      <div class="languages">
        <!---HTML -->
        <div class="language-container">
          <div class="language">
            <Image class="language" src={htmlLogo} alt="HTML logo" />
          </div>
          <div class="language-text">HTML 5</div>
        </div>
        <!---CSS -->
        <div class="language-container">
          <div class="language">
            <Image class="language" src={cssLogo} alt="CSS logo" />
          </div>
          <div class="language-text">CSS</div>
        </div>
        <!---JS -->
        <div class="language-container">
          <div class="language">
            <Image class="language" src={jsLogo} alt="JavaScript logo" />
          </div>
          <div class="language-text">JavaScript</div>
        </div>
        <!---JAVA -->
        <div class="language-container">
          <div class="language">
            <Image class="language" src={java} alt="JavaScript logo" />
          </div>
          <div class="language-text">JAVA</div>
        </div>
        <!---C# -->
        <div class="language-container">
          <div class="language">
            <Image class="language" src={csLogo} alt="C-Sharp logo" />
          </div>
          <div class="language-text">C#</div>
        </div>
      </div>
    </div>
  </body>
</Layout>

<Footer />
<style is:global>
  /*Phone Screen*/
  .page-header {
    width: 100%;
    height: 300px;
  }

  .sub-text {
    text-align: center;
    margin-top: 2%;
    font-size: 21px;
  }

  /*Moving Text*/
  .wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .dynamic-text .wrapper {
    margin-left: 15px;
    line-height: 90px;
    height: 90px;
    overflow: hidden;
    width: auto;
  }

  .dynamic-text .dynamic-list {
    list-style: none;
    font-size: 21px;
  }

  .dynamic-text li span {
    position: relative;
  }

  .dynamic-text li span::after {
    content: "";
    position: absolute;
    height: 100%;
    width: 100%;
    border-left: 2px solid #f58939;
    left: 0;
    animation: typing 5s steps(27) infinite;
    background: #090e25;
  }

  @keyframes typing {
    100% {
      left: 100%;
      margin: 0 20px 0 20px;
    }
  }

  /*Header Text*/
  .text-intro {
    font-size: 80px;
    line-height: 1em;
    margin-top: 20%;
  }

  .color-gradient {
    font-size: 100px;
    color: rgb(245, 137, 57);
    color: linear-gradient(
      65deg,
      rgba(245, 137, 57, 1) 0%,
      rgba(226, 155, 51, 1) 48%,
      rgba(255, 212, 0, 1) 100%
    );
  }
  /*About Me*/
  .container {
    margin-top: 5%;
    color: var(--orange);
    font-size: 30px;
    height: 100%;
    margin-bottom: 5%;
  }

  .about-text {
    margin-left: 2.2em;
    margin-right: 1.6em;
    color: #fff;
    float: left;
    margin-top: 1em;
    font-size: 20px;
    margin-bottom: 10%;
  }

  .about {
    display: flex;
    flex-direction: column;
  }

  h2 {
    color: rgb(245, 137, 57);
    color: linear-gradient(
      65deg,
      rgba(245, 137, 57, 1) 0%,
      rgba(226, 155, 51, 1) 48%,
      rgba(255, 212, 0, 1) 100%
    );
    text-align: center;
    font-size: 35px;
  }

  .profile {
    height: 210px;
    width: 210px;
    display: flex;
    margin-left: auto;
    margin-right: auto;
    border-radius: 50%;
    border: solid 6px #f58939;
    margin-bottom: 20%;
  }

  .profile-image {
    display: flex;
    margin-left: auto;
    margin-right: auto;
    border-radius: 50%;

    margin-bottom: 20%;
  }

  /*Languages*/
  .language {
    display: flex;
    width: 100px;
    height: 100px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 15%;
    margin-bottom: 5%;
  }

  .language-text {
    text-align: center;
    color: #fff;
  }

  /*Screens bigger than 500px */
  @media only screen and (min-width: 500px) {
    .text-intro {
      font-size: 100px;
    }

    .color-gradient {
      font-size: 120px;
    }

    .container {
      margin-top: 25%;
    }

    .dynamic-text .dynamic-list {
      font-size: 25px;
    }

    h2 {
      font-size: 40px;
    }

    .about-text {
      font-size: 25px;
      margin-left: 2.8em;
      margin-right: 2em;
    }

    .profile-image {
      height: 230px;
      width: 230px;
      margin-bottom: 25%;
    }
  }

  /*Screens bigger than 800px */
  @media only screen and (min-width: 800px) {
    .text-intro {
      font-size: 120px;
    }

    h2 {
      font-size: 50px;
    }

    .color-gradient {
      font-size: 140px;
    }

    .dynamic-text .dynamic-list {
      font-size: 28px;
    }

    .container {
      display: grid;
      padding-top: 15%;
    }

    .about {
      display: grid;
      grid-template-rows: repeat(10, 70px);
      grid-template-columns: repeat(12, 1fr);
    }

    .about-header {
      grid-column-start: 4;
      grid-column-end: 10;
      grid-row-start: 1;
      grid-row-end: 2;
    }

    .about-text {
      font-size: 30px;
      grid-column-start: 1;
      grid-column-end: 8;
      grid-row-start: 3;
      grid-row-end: 6;
    }

    .profile-image {
      grid-column-start: 8;
      grid-column-end: 10;
      grid-row-start: 5;
      grid-row-end: 7;
    }
    .profile {
      width: 250px;
      height: 250px;
    }
    .languages {
      width: 100%;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-around;
      margin-top: 5%;
      height: 450px;
    }

    .language-container {
      flex: 0 0 25%;
      margin: 20px;
    }

    .language {
      width: 120px;
      height: 120px;
    }

    .language-header {
      padding-top: 15%;
    }

    .language-text {
      margin-top: 50px;
    }
  }

  /*Screens bigger than 1000px */
  @media only screen and (min-width: 1000px) {
    .about {
      display: grid;
      grid-template-rows: repeat(7, 70px);
      grid-template-columns: repeat(12, 1fr);
    }

    .profile-image {
      grid-column-start: 8;
      grid-column-end: 10;
      grid-row-start: 4;
      grid-row-end: 6;
    }

    .profile {
      width: 300px;
      height: 300px;
    }

    .language {
      width: 150px;
      height: 150px;
    }
  }

  /*Screens bigger than 1300px */
  @media only screen and (min-width: 1300px) {
    .text-intro {
      font-size: 150px;
    }

    .color-gradient {
      font-size: 175px;
    }

    .dynamic-text .dynamic-list {
      font-size: 35px;
    }

    .about-text {
      grid-column-start: 2;
      grid-column-end: 8;
      grid-row-start: 3;
      grid-row-end: 6;
    }

    .languages {
      width: 100%;
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: space-around;
      margin-top: 5%;
      height: 100px;
    }

    .language-container {
      flex: 0 0 15%;
      margin: 20px;
    }
  }
  /*Screens bigger than 1700px */
  @media only screen and (min-width: 1700px) {
    .text-intro {
      font-size: 180px;
    }

    .color-gradient {
      font-size: 205px;
    }

    h2 {
      font-size: 70px;
    }

    .profile-image {
      width: 300px;
      height: 300px;
      grid-column-start: 8;
      grid-column-end: 10;
      grid-row-start: 4;
      grid-row-end: 6;
    }

    .about {
      display: grid;
      grid-template-rows: repeat(6, 70px);
      grid-template-columns: repeat(12, 1fr);
    }

    .about-text {
      grid-column-start: 2;
      grid-column-end: 7;
      grid-row-start: 4;
      grid-row-end: 6;
    }
  }
</style>
