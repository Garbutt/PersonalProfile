---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { Image } from "astro:assets";
import profilePicture from "../../public/profile pic.png";
---

<Layout title="Welcome to Astro.">
  <main>
    <!--Navbar -->
    <Navbar />
    <!---Page header -->
    <div class="page-header">
      <h1 class="text-intro">
        HI, I AM <br /><span class="color-gradient">Reece</span><br
          class="gap"
        />
      </h1><p class="sub-text">A junior Software Developer</p>
    </div>
  </main>

  <body>
    <!--Container-->
    <div class="container">
      <!--About Me -->
      <div class="about-header">
        <h2>&lt;About Me/&gt;</h2>
        <p class="about-text">
          Hello there! ðŸ‘‹ I'm Reece, a junior software developer passionate
          about crafting elegant solutions to real-world problems. <br /><br
          />My journey in the realm of technology began with Web Development,
          and I've been on an exciting learning adventure ever since.
        </p>
        <!--Profile image -->
        <div class="profile-image">
          <Image
            src={profilePicture}
            class="profile-image"
            alt="Reece Farrell Picture"
          />
        </div>
      </div>
    </div>
  </body>
</Layout>
<style>
  html {
    background: rgb(24, 33, 64);
    background: linear-gradient(
      65deg,
      rgba(24, 33, 64, 1) 0%,
      rgba(12, 28, 43, 1) 48%,
      rgba(6, 3, 33, 1) 100%
    );
  }
  main {
    width: 100%;
    margin: auto;
    padding: 1rem;
    height: 350px;
    max-width: calc(100% - 2rem);
    color: white;
  }

  .page-header {
    width: 100%;
    height: 350px;
  }

  h1 {
    text-align: center;
  }

  .sub-text {
    text-align: center;
    margin-top: 2%;
    font-size: 21px;
  }

  .text-intro {
    font-size: 70px;
    line-height: 1em;
    margin-top: 20%;
  }

  .color-gradient {
    font-size: 100px;
    color: rgb(245, 137, 57);
    color: linear-gradient(
      65deg,
      rgba(245, 137, 57, 1) 0%,
      rgba(226, 155, 51, 1) 48%,
      rgba(255, 212, 0, 1) 100%
    );
  }
  /*About Me*/
  .container {
    margin-top: 5%;
    color: var(--orange);
    font-size: 30px;
    height: 700px;
  }
  .about-header {
    text-align: center;
    color: var(--orange);
  }

  .about-text {
    color: #fff;
    text-align: center;
    margin-left: 1.8em;
    margin-right: 1.8em;
    margin-top: 1em;
    font-size: 20px;
    margin-bottom: 10%;
  }

  h2 {
    color: rgb(245, 137, 57);
    color: linear-gradient(
      65deg,
      rgba(245, 137, 57, 1) 0%,
      rgba(226, 155, 51, 1) 48%,
      rgba(255, 212, 0, 1) 100%
    );
  }

  .profile-image {
    height: 210px;
    width: 205px;
    display: flex;
    margin-left: auto;
    margin-right: auto;
    border-radius: 50%;
    outline: solid 5px orange;
  }
</style>
